<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:newsapp="clr-namespace:NewsApp"
             xmlns:customView="clr-namespace:NewsApp.CustomView;assembly=NewsApp"
             x:Class="NewsApp.Views.SearchPage">

    <newsapp:StateContainer State="{Binding IsState}">
        <newsapp:StateCondition Is="NoItem">
            <StackLayout BackgroundColor="#e5e5e5"
                         HorizontalOptions="FillAndExpand"
                         VerticalOptions="FillAndExpand">
            </StackLayout>
        </newsapp:StateCondition>

        <newsapp:StateCondition Is="Normal">
            <customView:NewsView x:Name="NewsView"/>
        </newsapp:StateCondition>
    </newsapp:StateContainer>

</ContentPage>